<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dormitory">

    <!-- 获取读取SD卡\相机的权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Login.AdmLogActivity"></activity>
        <activity android:name=".Login.StuLogActivity" />
        <activity android:name=".Student.MyPagesActivity.ChangeUserImgActivity" />
        <activity android:name=".Student.MainPageActivity.repairDormitory"></activity>
        <activity android:name=".Student.MainPageActivity.changeDormitory" />
        <activity android:name=".Student.MyPagesActivity.AdviceActivity" />
        <activity android:name=".Student.MyPagesActivity.SetupActivity" />
        <activity android:name=".Student.Tabbar" />

        <activity android:name=".Login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".WelcomeActivity"/>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.example.dormitory.fileProvider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>

</manifest>