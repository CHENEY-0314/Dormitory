<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Student.MyPagesActivity.MyChangeDormitory.MyChangeDormitoryActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="15dp"
        android:layout_weight="0.06">
        <ImageView
            android:id="@+id/MCD_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/back" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="16sp"
            android:layout_marginStart="10dp"
            android:text="换宿申请"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_marginEnd="21dp">
            <ImageView
                android:id="@+id/MCD_more"
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:src="@drawable/more1"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.92"
        android:orientation="vertical">
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/MCD_tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabGravity="fill"
            app:tabMaxWidth="0dp"
            app:tabIndicatorColor="@color/colorAccent"
            app:tabSelectedTextColor="@color/colorAccent"
            app:tabTextColor="#535252"
            app:tabBackground="@android:color/transparent"
            app:tabRippleColor="@android:color/transparent"
            app:tabIndicatorFullWidth="false">

            <com.google.android.material.tabs.TabItem
                android:id="@+id/MCD_tabItem1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的申请" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/MCD_tabItem2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收到的申请" />

        </com.google.android.material.tabs.TabLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#B3B3B3"/>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/MCD_viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </androidx.viewpager.widget.ViewPager>

    </LinearLayout>

</LinearLayout>
