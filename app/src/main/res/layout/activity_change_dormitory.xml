<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".Student.MainPageActivity.changeDormitory">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="10dp"
        android:layout_weight="0.08">
        <ImageView
            android:id="@+id/changeDor_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/back" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="16sp"
            android:layout_marginStart="10dp"
            android:text="换宿舍申请"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.92">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="15dp">
                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/icon_my" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="现住信息"
                    android:layout_marginStart="5dp"
                    android:textColor="#E9252525"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/repair_select_bg"
                android:padding="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.25"
                        android:layout_height="match_parent"
                        android:text="楼号："
                        android:textColor="#FC000000"
                        android:gravity="center_vertical"
                        android:textSize="16sp"/>
                    <EditText
                        android:id="@+id/repairDor_txt_building"
                        android:layout_width="0dp"
                        android:layout_weight="0.75"
                        android:layout_height="match_parent"
                        android:hint="C10"
                        android:textColorHint="#FC393838"
                        android:enabled="false"
                        android:textSize="15sp"
                        android:singleLine="true"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="6dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.25"
                        android:layout_height="match_parent"
                        android:text="宿舍号："
                        android:textColor="#FC000000"
                        android:gravity="center_vertical"
                        android:textSize="16sp"/>
                    <EditText
                        android:id="@+id/repairDor_txt_room"
                        android:layout_width="0dp"
                        android:layout_weight="0.75"
                        android:layout_height="match_parent"
                        android:hint="143"
                        android:textColorHint="#FC393838"
                        android:enabled="false"
                        android:textSize="15sp"
                        android:singleLine="true"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/repair_select_bg"
                android:padding="5dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.3"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@drawable/changedor_dept" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="意向学院"
                            android:layout_marginStart="5dp"
                            android:textColor="#E9252525"
                            android:gravity="center_vertical"
                            android:textSize="16sp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.7"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:paddingRight="10dp">
                        <Spinner
                            android:id="@+id/department"
                            android:prompt="@string/dept_label"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:entries="@array/dept_name"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#F1F1F1"></LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.3"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@drawable/changedor_building" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="意向楼栋"
                            android:layout_marginStart="5dp"
                            android:textColor="#E9252525"
                            android:gravity="center_vertical"
                            android:textSize="16sp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.7"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:paddingRight="10dp">
                        <Spinner
                            android:id="@+id/building"
                            android:prompt="@string/building_label"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#F1F1F1"></LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.3"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@drawable/changedor_floor" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="意向楼层"
                            android:layout_marginStart="5dp"
                            android:textColor="#E9252525"
                            android:gravity="center_vertical"
                            android:textSize="16sp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.7"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:paddingRight="10dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <CheckBox
                                android:id="@+id/changeDor_floor_cb_1"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:paddingVertical="5dp"
                                android:layout_marginTop="7dp"
                                android:layout_marginBottom="7dp"
                                android:text="1"
                                android:textSize="14sp"
                                android:background="@drawable/checkbox"
                                android:button="@null"
                                android:checked="true"
                                android:gravity="center"
                                android:textColor="#fff"/>
                            <CheckBox
                                android:id="@+id/changeDor_floor_cb_2"
                                android:layout_toRightOf="@+id/changeDor_floor_cb_1"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="7dp"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:paddingVertical="5dp"
                                android:layout_marginBottom="7dp"
                                android:text="2"
                                android:textSize="14sp"
                                android:background="@drawable/checkbox"
                                android:button="@null"
                                android:gravity="center"
                                android:textColor="#fff"/>
                            <CheckBox
                                android:id="@+id/changeDor_floor_cb_3"
                                android:layout_below="@+id/changeDor_floor_cb_1"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:paddingVertical="5dp"
                                android:layout_marginBottom="7dp"
                                android:text="3"
                                android:textSize="14sp"
                                android:background="@drawable/checkbox"
                                android:button="@null"
                                android:gravity="center"
                                android:textColor="#fff"/>
                            <CheckBox
                                android:id="@+id/changeDor_floor_cb_4"
                                android:layout_toRightOf="@+id/changeDor_floor_cb_3"
                                android:layout_below="@+id/changeDor_floor_cb_2"
                                android:layout_marginLeft="15dp"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:paddingVertical="5dp"
                                android:layout_marginBottom="7dp"
                                android:text="4"
                                android:textSize="14sp"
                                android:background="@drawable/checkbox"
                                android:button="@null"
                                android:gravity="center"
                                android:textColor="#fff"/>
                            <CheckBox
                                android:id="@+id/changeDor_floor_cb_5"
                                android:layout_below="@+id/changeDor_floor_cb_3"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:paddingVertical="5dp"
                                android:layout_marginBottom="7dp"
                                android:text="5"
                                android:textSize="14sp"
                                android:background="@drawable/checkbox"
                                android:button="@null"
                                android:gravity="center"
                                android:textColor="#fff"/>
                            <CheckBox
                                android:id="@+id/changeDor_floor_cb_6"
                                android:layout_toRightOf="@+id/changeDor_floor_cb_5"
                                android:layout_below="@+id/changeDor_floor_cb_4"
                                android:layout_marginLeft="15dp"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:paddingVertical="5dp"
                                android:layout_marginBottom="7dp"
                                android:text="6"
                                android:textSize="14sp"
                                android:background="@drawable/checkbox"
                                android:button="@null"
                                android:gravity="center"
                                android:textColor="#fff"/>
<!--                            <CheckBox-->
<!--                                android:id="@+id/changeDor_floor_cb_7"-->
<!--                                android:layout_below="@+id/changeDor_floor_cb_6"-->
<!--                                android:layout_width="175dp"-->
<!--                                android:layout_height="wrap_content"-->
<!--                                android:paddingVertical="5dp"-->
<!--                                android:layout_marginBottom="7dp"-->
<!--                                android:text="7"-->
<!--                                android:textSize="14sp"-->
<!--                                android:background="@drawable/checkbox"-->
<!--                                android:button="@null"-->
<!--                                android:gravity="center"-->
<!--                                android:textColor="#fff"/>-->
                            <CheckBox
                                android:id="@+id/changeDor_floor_cb_7"
                                android:layout_below="@+id/changeDor_floor_cb_5"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:paddingVertical="5dp"
                                android:layout_marginBottom="7dp"
                                android:text="7"
                                android:textSize="14sp"
                                android:background="@drawable/checkbox"
                                android:button="@null"
                                android:gravity="center"
                                android:textColor="#fff"/>
                            <CheckBox
                                android:id="@+id/changeDor_floor_cb_8"
                                android:layout_toRightOf="@+id/changeDor_floor_cb_7"
                                android:layout_below="@+id/changeDor_floor_cb_6"
                                android:layout_marginLeft="15dp"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:paddingVertical="5dp"
                                android:layout_marginBottom="7dp"
                                android:text="随意"
                                android:textSize="14sp"
                                android:background="@drawable/checkbox"
                                android:button="@null"
                                android:gravity="center"
                                android:textColor="#fff"/>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#F1F1F1"></LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.3"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@drawable/changedor_bed" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="意向床位"
                            android:layout_marginStart="5dp"
                            android:textColor="#E9252525"
                            android:gravity="center_vertical"
                            android:textSize="16sp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.7"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:paddingRight="10dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <CheckBox
                                android:id="@+id/changeDor_bed_cb_1"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:paddingVertical="5dp"
                                android:layout_marginBottom="7dp"
                                android:layout_marginTop="7dp"
                                android:text="1"
                                android:textSize="14sp"
                                android:background="@drawable/checkbox"
                                android:button="@null"
                                android:checked="true"
                                android:gravity="center"
                                android:textColor="#fff"/>
                            <CheckBox
                                android:id="@+id/changeDor_bed_cb_2"
                                android:layout_toRightOf="@+id/changeDor_bed_cb_1"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="7dp"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:paddingVertical="5dp"
                                android:layout_marginBottom="7dp"
                                android:text="2"
                                android:textSize="14sp"
                                android:background="@drawable/checkbox"
                                android:button="@null"
                                android:gravity="center"
                                android:textColor="#fff"/>
                            <CheckBox
                                android:id="@+id/changeDor_bed_cb_3"
                                android:layout_below="@+id/changeDor_bed_cb_1"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:paddingVertical="5dp"
                                android:layout_marginBottom="7dp"
                                android:text="3"
                                android:textSize="14sp"
                                android:background="@drawable/checkbox"
                                android:button="@null"
                                android:gravity="center"
                                android:textColor="#fff"/>
                            <CheckBox
                                android:id="@+id/changeDor_bed_cb_4"
                                android:layout_toRightOf="@+id/changeDor_bed_cb_3"
                                android:layout_below="@+id/changeDor_bed_cb_2"
                                android:layout_marginLeft="15dp"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:paddingVertical="5dp"
                                android:layout_marginBottom="7dp"
                                android:text="4"
                                android:textSize="14sp"
                                android:background="@drawable/checkbox"
                                android:button="@null"
                                android:gravity="center"
                                android:textColor="#fff"/>
                            <CheckBox
                                android:id="@+id/changeDor_bed_cb_5"
                                android:layout_below="@+id/changeDor_bed_cb_3"
                                android:layout_width="175dp"
                                android:layout_height="wrap_content"
                                android:paddingVertical="5dp"
                                android:layout_marginBottom="7dp"
                                android:text="随意"
                                android:textSize="14sp"
                                android:background="@drawable/checkbox"
                                android:button="@null"
                                android:gravity="center"
                                android:textColor="#fff"/>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center_horizontal">
                <Button
                    android:id="@+id/changeDor_submit"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="查看筛选结果"
                    android:textSize="18sp"
                    android:textColor="#FFFFFF"
                    android:enabled="true"
                    android:layout_marginBottom="40dp"
                    android:background="@drawable/repair_submit_bg"/>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>