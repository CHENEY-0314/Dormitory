            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:background="#FFFFFF">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="wrap_content"
                    android:text="报修类别："
                    android:gravity="center_vertical"
                    android:textSize="20sp"
                    android:textStyle="bold"></TextView>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/cb_1"
                        android:layout_width="130dp"
                        android:layout_height="30dp"
                        android:text="电器(灯、风扇)"
                        android:textColor="#ABABAB">
                    </androidx.appcompat.widget.AppCompatCheckBox>
                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/cb_2"
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:layout_toRightOf="@id/cb_1"
                        android:text="桌椅等家具"
                        android:textColor="#ABABAB">
                    </androidx.appcompat.widget.AppCompatCheckBox>
                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/cb_3"
                        android:layout_width="130dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/cb_1"
                        android:text="中央空调"
                        android:textColor="#ABABAB">
                    </androidx.appcompat.widget.AppCompatCheckBox>
                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/cb_4"
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/cb_2"
                        android:layout_toRightOf="@id/cb_3"
                        android:text="建筑(脱落)"
                        android:textColor="#ABABAB">
                    </androidx.appcompat.widget.AppCompatCheckBox>
                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/cb_5"
                        android:layout_width="220dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/cb_3"
                        android:text="水设施（漏水、换水龙头等）"
                        android:textColor="#ABABAB">
                    </androidx.appcompat.widget.AppCompatCheckBox>
                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/cb_6"
                        android:layout_width="220dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/cb_5"
                        android:text="其他（请备注）"
                        android:textColor="#ABABAB">
                    </androidx.appcompat.widget.AppCompatCheckBox>

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:paddingTop="15dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:background="#FFFFFF">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="match_parent"
                    android:text="联系方式："
                    android:gravity="center_vertical"
                    android:textSize="20sp"
                    android:textStyle="bold"></TextView>
                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:layout_height="match_parent"
                    android:hint="填写归属广州的手机号（可填舍友）"
                    android:textSize="15sp"
                    android:inputType="phone"
                    android:singleLine="true"></EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="备注："
                    android:gravity="center_vertical"
                    android:textSize="20sp"

                    android:textStyle="bold"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="5dp">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:padding="5dp"
                    android:background="@drawable/repair_select_bg"
                    android:hint="请详细描述问题，方便维修人员上门维修。"
                    android:autofillHints=""
                    android:textSize="15sp"
                    android:gravity="start"
                    android:inputType="textMultiLine"
                    android:lineSpacingExtra="3dp"
                    android:maxLength="300"></EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="center_horizontal">
                <Button
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:text="提交"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/repair_submit_bg"></Button>
            </LinearLayout>

        </LinearLayout>


    </ScrollView>

</LinearLayout>