<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_manage_wholeItem"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="10dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="20dp"
            android:layout_margin="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/adm_item_name"/>
                    <TextView
                        android:id="@+id/item_manage_name_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="申请人"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="#424141"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/adm_item_sex"/>
                    <TextView
                        android:id="@+id/item_manage_sex_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="性别"
                        android:textSize="17sp"
                        android:textColor="#424141"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/adm_item_bed"/>
                    <TextView
                        android:id="@+id/item_manage_buildingNum_1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="楼栋"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="#424141"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="-"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="#424141"/>
                    <TextView
                        android:id="@+id/item_manage_roomNum_1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="房间"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="#424141"/>
                    <TextView
                        android:id="@+id/item_manage_bedNum_1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:text="1号床"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="#424141"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/adm_item_stu"/>
                    <TextView
                        android:id="@+id/item_manage_stuNum_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="学号"
                        android:textSize="17sp"
                        android:textColor="#424141"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/blue"
                android:layout_marginVertical="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/adm_item_name"/>
                    <TextView
                        android:id="@+id/item_manage_name_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="李四"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="#424141"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/adm_item_sex"/>
                    <TextView
                        android:id="@+id/item_manage_sex_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="男"
                        android:textSize="17sp"
                        android:textColor="#424141"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/adm_item_bed"/>
                    <TextView
                        android:id="@+id/item_manage_buildingNum_2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="C12"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="#424141"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="-"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="#424141"/>
                    <TextView
                        android:id="@+id/item_manage_roomNum_2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="145"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="#424141"/>
                    <TextView
                        android:id="@+id/item_manage_bedNum_2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:text="3号床"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="#424141"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/adm_item_stu"/>
                    <TextView
                        android:id="@+id/item_manage_stuNum_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="201830669999"
                        android:textSize="17sp"
                        android:textColor="#424141"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/item_manage_yesOrNot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/item_manage_btn_refuse"
                    android:layout_width="60dp"
                    android:layout_height="35dp"
                    android:text="拒绝"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:background="@drawable/grey_btn"/>
                <Button
                    android:id="@+id/item_manage_btn_agree"
                    android:layout_width="60dp"
                    android:layout_height="35dp"
                    android:text="同意"
                    android:layout_marginStart="10dp"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:background="@drawable/blue_btn"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/item_manage_verify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:visibility="visible"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="双方换宿已完成，请您确认!"
                        android:textSize="16sp"
                        android:gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end">
                    <Button
                        android:id="@+id/item_manage_verify_btn"
                        android:layout_width="90dp"
                        android:layout_height="35dp"
                        android:text="确认"
                        android:layout_marginStart="10dp"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:textSize="13sp"
                        android:background="@drawable/blue_btn"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>