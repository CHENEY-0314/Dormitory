<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context=".Student.MyPagesActivity.MyFixDormitory.ChangeFixApplyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#fff"
        android:paddingTop="17dp"
        android:layout_weight="0.10">
        <ImageView
            android:id="@+id/ACFA_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/back" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="16sp"
            android:layout_marginStart="10dp"
            android:text="修改报修申请"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.90">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="15dp">
                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/icon_my" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个人信息"
                    android:layout_marginStart="5dp"
                    android:textColor="#E9252525"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/repair_select_bg"
                android:padding="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.25"
                        android:layout_height="match_parent"
                        android:text="楼号："
                        android:textColor="#FC000000"
                        android:gravity="center_vertical"
                        android:textSize="16sp"/>
                    <EditText
                        android:id="@+id/ACFA_txt_building"
                        android:layout_width="0dp"
                        android:layout_weight="0.75"
                        android:layout_height="match_parent"
                        android:hint="C10"
                        android:textColorHint="#FC393838"
                        android:enabled="false"
                        android:textSize="15sp"
                        android:singleLine="true"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="6dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.25"
                        android:layout_height="match_parent"
                        android:text="宿舍号："
                        android:textColor="#FC000000"
                        android:gravity="center_vertical"
                        android:textSize="16sp"/>
                    <EditText
                        android:id="@+id/ACFA_txt_room"
                        android:layout_width="0dp"
                        android:layout_weight="0.75"
                        android:layout_height="match_parent"
                        android:hint="143"
                        android:textColorHint="#FC393838"
                        android:enabled="false"
                        android:textSize="15sp"
                        android:singleLine="true"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="6dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.3"
                        android:layout_height="match_parent"
                        android:text="报修人学号:"
                        android:gravity="center_vertical"
                        android:textSize="16sp"
                        android:textColor="#FC000000"/>
                    <EditText
                        android:id="@+id/ACFA_txt_studentNum"
                        android:layout_width="0dp"
                        android:layout_weight="0.6"
                        android:layout_height="match_parent"
                        android:hint="201830660000"
                        android:textColorHint="#FC393838"
                        android:enabled="false"
                        android:textSize="15sp"
                        android:inputType="number"
                        android:singleLine="true"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="15dp">
                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/icon_fix" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="维修信息"
                    android:layout_marginStart="5dp"
                    android:textColor="#E9252525"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/repair_select_bg"
                android:padding="5dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.28"
                        android:layout_height="wrap_content"
                        android:text="报修类别："
                        android:textColor="#FC000000"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical"
                        android:textSize="16sp"/>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.72"
                        android:layout_marginTop="8dp"
                        android:layout_height="wrap_content">
                        <CheckBox
                            android:id="@+id/ACFA_cb_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="5dp"
                            android:layout_marginBottom="7dp"
                            android:text="电器(灯、风扇)"
                            android:textSize="14sp"
                            android:background="@drawable/checkbox"
                            android:button="@null"
                            android:checked="true"
                            android:gravity="center"
                            android:textColor="#fff"/>
                        <CheckBox
                            android:id="@+id/ACFA_cb_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="5dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginBottom="7dp"
                            android:textSize="14sp"
                            android:layout_toEndOf="@+id/ACFA_cb_1"
                            android:text="桌椅等家具"
                            android:background="@drawable/checkbox"
                            android:button="@null"
                            android:gravity="center"
                            android:textColor="#fff"/>
                        <CheckBox
                            android:id="@+id/ACFA_cb_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="5dp"
                            android:layout_marginBottom="7dp"
                            android:textSize="14sp"
                            android:layout_below="@+id/ACFA_cb_1"
                            android:text="中央空调"
                            android:background="@drawable/checkbox"
                            android:button="@null"
                            android:gravity="center"
                            android:textColor="#fff"/>
                        <CheckBox
                            android:id="@+id/ACFA_cb_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="5dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginBottom="5dp"
                            android:textSize="14sp"
                            android:layout_below="@+id/ACFA_cb_2"
                            android:layout_toEndOf="@+id/ACFA_cb_3"
                            android:text="建筑(脱落)"
                            android:background="@drawable/checkbox"
                            android:button="@null"
                            android:gravity="center"
                            android:textColor="#fff"/>
                        <CheckBox
                            android:id="@+id/ACFA_cb_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="5dp"
                            android:layout_marginBottom="7dp"
                            android:textSize="14sp"
                            android:layout_below="@+id/ACFA_cb_3"
                            android:text="水设施（漏水、换水龙头等）"
                            android:background="@drawable/checkbox"
                            android:button="@null"
                            android:gravity="center"
                            android:textColor="#fff"/>
                        <CheckBox
                            android:id="@+id/ACFA_cb_6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="5dp"
                            android:layout_below="@+id/ACFA_cb_5"
                            android:text="其他（请备注）"
                            android:background="@drawable/checkbox"
                            android:button="@null"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:textColor="#fff"/>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:background="#FFFFFF">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.28"
                        android:layout_height="match_parent"
                        android:text="联系方式："
                        android:gravity="center_vertical"
                        android:textColor="#FC000000"
                        android:textSize="16sp"/>
                    <EditText
                        android:id="@+id/ACFA_edt_Number"
                        android:layout_width="0dp"
                        android:layout_weight="0.72"
                        android:layout_height="match_parent"
                        android:hint="填写归属广州的手机号（可填舍友）"
                        android:textSize="15sp"
                        android:inputType="phone"
                        android:singleLine="true"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="备注："
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:textColor="#FC000000"
                    android:textSize="16sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/repair_select_bg"
                android:padding="8dp"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/ACFA_edt_Other"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:hint="请详细描述问题，方便维修人员上门维修(5个字以上)"
                    android:autofillHints=""
                    android:background="@null"
                    android:textSize="15sp"
                    android:gravity="start"
                    android:inputType="textMultiLine"
                    android:lineSpacingExtra="3dp"
                    android:maxLength="400"/>
                <TextView
                    android:id="@+id/ACFA_txt_OtherNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="0/400"
                    android:paddingEnd="8dp"
                    android:textColor="@color/green"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center_horizontal">
                <Button
                    android:id="@+id/ACFA_submit"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="提交修改"
                    android:textSize="18sp"
                    android:textColor="#FFFFFF"
                    android:enabled="false"
                    android:layout_marginBottom="40dp"
                    android:background="@drawable/repair_submit_bg"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>