<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary">

    <androidx.cardview.widget.CardView
        android:id="@+id/AIRD_wholeItem"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="20dp"
            android:layout_margin="20dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/sofa"/>
                <TextView
                    android:id="@+id/AIRD_Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XXX"
                    android:layout_marginStart="10dp"
                    android:textStyle="bold"
                    android:textColor="#424141"
                    android:textSize="17sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="同学的换宿申请"
                    android:layout_marginStart="5dp"
                    android:textStyle="bold"
                    android:textColor="#424141"
                    android:textSize="17sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系方式："
                    android:textColor="#4A4A4A"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/AIRD_Number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18818523726"
                    android:textColor="#424141"
                    android:textSize="15sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="申请时间："
                    android:textColor="#4A4A4A"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/AIRD_Time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2020-6-11 16:23"
                    android:textColor="#424141"
                    android:textSize="15sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/AIRD_notYetAgree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/AIRD_Refuse"
                    android:layout_width="60dp"
                    android:layout_height="35dp"
                    android:text="拒绝"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:background="@drawable/grey_btn"/>
                <Button
                    android:id="@+id/AIRD_Agree"
                    android:layout_width="60dp"
                    android:layout_height="35dp"
                    android:text="同意"
                    android:layout_marginStart="10dp"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:background="@drawable/green_btn"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/AIRD_allreadyAgree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                android:orientation="horizontal">
                <Button
                    android:layout_width="150dp"
                    android:layout_height="35dp"
                    android:text="已同意，正在处理"
                    android:layout_marginStart="10dp"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:enabled="false"
                    android:background="@drawable/green_btn"/>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>