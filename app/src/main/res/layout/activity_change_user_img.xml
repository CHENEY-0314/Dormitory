<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/loginback"
    tools:context=".Student.MyPagesActivity.ChangeUserImgActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginVertical="10dp"
        android:paddingTop="10dp">
        <ImageView
            android:id="@+id/ACU_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/backwhite" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginStart="10dp"
            android:text="更换头像"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:focusableInTouchMode="true">

            <ImageView
                android:id="@+id/ACU_userimg"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:background="@drawable/userimage"/>

            <Button
                android:id="@+id/ACU_ChangeByAlbum"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginHorizontal="90dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/changeimgbtn"
                android:bufferType="normal"
                android:stateListAnimator="@null"
                android:text="从相册上传"
                android:textColor="#fff"
                android:textSize="15sp" />

            <Button
                android:id="@+id/ACU_ChangeByCamera"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="13dp"
                android:layout_marginHorizontal="90dp"
                android:background="@drawable/changeimgbtn"
                android:textColor="#fff"
                android:bufferType="normal"
                android:stateListAnimator="@null"
                android:textSize="15sp"
                android:text="拍照上传"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_gravity="bottom"
            android:src="@drawable/changeimgbackground"/>
    </LinearLayout>

</LinearLayout>