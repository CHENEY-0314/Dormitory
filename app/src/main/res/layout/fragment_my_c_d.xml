<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:padding="20dp"
    tools:context=".Student.MyPagesActivity.MyChangeDormitory.MyCDFragment">

    <!--    有申请时显示-->
    <LinearLayout
        android:id="@+id/MyCDF_HaveApply"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="130dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/changedormory"
                android:gravity="center">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/bed"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="50dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/MyCDF_Dormitory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="目标宿舍： C10-145"
                        android:textSize="16sp"
                        android:textColor="#000000"/>

                    <TextView
                        android:id="@+id/MyCDF_state"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="处理中"
                        android:textColor="#636262"/>

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:id="@+id/MyCDF_alterApply"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/white"
            android:layout_marginTop="10dp"
            android:gravity="center">
            <TextView
                android:id="@+id/MyCDF_changeApply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改申请"
                android:textSize="14sp"
                android:textColor="@color/colorAccent"/>
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="55dp"
                android:layout_marginVertical="15dp"
                android:background="#A1A1A1"/>
            <TextView
                android:id="@+id/MyCDF_deleteApply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#333333"
                android:text="撤销申请"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/MyCDF_verifyApply"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/white"
            android:layout_marginTop="10dp"
            android:visibility="visible"
            android:gravity="center">
            <Button
                android:id="@+id/MyCDF_btn_verify"
                android:layout_width="150dp"
                android:layout_height="38dp"
                android:background="@drawable/green_btn"
                android:enabled="false"
                android:text="确认完成"
                android:textColor="@color/white"
                android:textSize="15sp"/>
        </LinearLayout>

        <ListView
            android:id="@+id/MyCDF_lvTrace"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:divider="@null"
            android:clickable="false"
            android:listSelector="@android:color/transparent"
            android:dividerHeight="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

<!--    没有申请时显示-->
    <LinearLayout
        android:id="@+id/MyCDF_NoApply"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:visibility="gone"
        android:gravity="center">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:src="@drawable/greysofa"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:textSize="15sp"
            android:text="没有申请哦 !"/>
    </LinearLayout>

</FrameLayout>