<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/colorPrimary"
    tools:context=".Student.MyPagesActivity.MyFixDormitory.MyFixDormitoryActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="15dp"
        android:layout_weight="0.06">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/AMFD_back"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/back" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="16sp"
                android:layout_marginStart="10dp"
                android:text="维修申请"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_marginEnd="21dp">
            <ImageView
                android:id="@+id/AMFD_more"
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:src="@drawable/more1"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.92"
        android:orientation="vertical"
        android:padding="20dp">

        <!--    有维修申请时显示-->
        <LinearLayout
            android:id="@+id/AMFD_withapply"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="130dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/fixdormory"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="65dp"
                        android:layout_height="60dp"
                        android:src="@drawable/myfix" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginEnd="50dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/AMFD_Dormitory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="C10-145 的维修单"
                            android:textColor="#000000"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/AMFD_state"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="处理中"
                            android:textColor="#636262" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/AMFD_alterApply"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/white"
                android:gravity="center">

                <TextView
                    android:id="@+id/AMFD_changeApply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="修改申请"
                    android:textColor="@color/colorAccent"
                    android:textSize="14sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="55dp"
                    android:layout_marginVertical="15dp"
                    android:background="#A1A1A1" />

                <TextView
                    android:id="@+id/AMFD_deleteApply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="撤销申请"
                    android:textColor="#333333"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/AMFD_verifyApply"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/white"
                android:gravity="center"
                android:visibility="gone">

                <Button
                    android:id="@+id/AMFD_btn_verify"
                    android:layout_width="150dp"
                    android:layout_height="38dp"
                    android:background="@drawable/green_btn"
                    android:enabled="false"
                    android:text="确认验收"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </LinearLayout>

            <ListView
                android:id="@+id/AMFD_lvTrace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:clickable="false"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:listSelector="@android:color/transparent" />
        </LinearLayout>

        <!--    没有申请时显示-->
        <LinearLayout
            android:id="@+id/AMFD_NoApply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="130dp"
                android:layout_height="150dp"
                android:src="@drawable/light" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:text="没有提交申请哦 !"
                android:textSize="15sp" />
        </LinearLayout>
        <!--        加载时显示-->
        <LinearLayout
            android:id="@+id/gif_loading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="100dp"
            android:orientation="vertical"
            android:visibility="visible">

            <pl.droidsonroids.gif.GifImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/loading_circle" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="正在加载中..."/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>