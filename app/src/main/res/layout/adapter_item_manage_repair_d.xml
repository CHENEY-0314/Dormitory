<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="20dp"
            android:layout_margin="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.45"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/adm_item_dor"/>
                    <TextView
                        android:id="@+id/item_manage_buildingNum"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="C10"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="#424141"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="-"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="#424141"
                        android:layout_marginHorizontal="5dp"/>
                    <TextView
                        android:id="@+id/item_manage_roomNum"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="145"
                        android:textStyle="bold"
                        android:textColor="#424141"
                        android:textSize="17sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.55"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/adm_item_call"/>
                    <TextView
                        android:id="@+id/item_manage_phoneNum"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="18088889999"
                        android:textIsSelectable="true"
                        android:textStyle="bold"
                        android:textColor="#424141"
                        android:textSize="17sp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">
                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/adm_item_types"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="类别："
                    android:textStyle="bold"
                    android:textColor="#424141"
                    android:textSize="17sp"/>
                <TextView
                    android:id="@+id/item_manage_repairTypes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="电器 桌椅 中央空调 建筑 水设施 其他"
                    android:textColor="#424141"
                    android:textSize="15sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">
                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/adm_item_moremessage"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="备注："
                    android:textStyle="bold"
                    android:textColor="#424141"
                    android:textSize="17sp"/>
                <TextView
                    android:id="@+id/item_manage_moreMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="这是备注"
                    android:textColor="#424141"
                    android:textSize="15sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/item_manage_btn_refuse"
                    android:layout_width="60dp"
                    android:layout_height="35dp"
                    android:text="拒受理"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:background="@drawable/grey_btn"/>
                <Button
                    android:id="@+id/item_manage_btn_agree"
                    android:layout_width="60dp"
                    android:layout_height="35dp"
                    android:text="受理"
                    android:layout_marginStart="10dp"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:background="@drawable/blue_btn"/>

            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>