<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:fitsSystemWindows="true"
android:id="@+id/beforeLogin"
tools:context="com.example.dormitory.MainPage">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="180dp"
            android:gravity="center"
            android:text="@string/sWelComToDor"
            android:textSize="35sp" />

        <Button
            android:id="@+id/btn_stuLogin"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:background="@drawable/rounded_corner"
            android:text="@string/sStuLogin"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btn_admLogin"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_corner"
            android:text="@string/sAdmLogin"
            android:textColor="@color/white"/>
    </LinearLayout>
</FrameLayout>